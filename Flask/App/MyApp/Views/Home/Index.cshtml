@{
    ViewData["Title"] = "Home Page";
}

<form method="post" enctype="multipart/form-data" 
asp-controller="FileUpload" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <h2>1. Upload data set:</h2>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
        @{
            if(ViewBag.UploadStatus == true)
            {
                <div class="col-md-10">
                    <p>File Uploaded successfully</p>
                </div>
            }
        }
    </div>
</form>

<form method="post" enctype="multipart/form-data" 
asp-controller="Regressor" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <h2>2. Neural Network Regressor</h2>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <h4> Enter the Target Column:</h4>
            <input type="target" name="target" value="" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Train & Pickle" />
        </div>
        <div class="col-md-10">
            <p>@ViewBag.RegressorMessage </p>
        </div>
    </div>
</form>


